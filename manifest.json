{
  "name": "AI Blocker",
  "version": "1.0",
  "description": "Redirects requests from AI-related websites to prevent use of generative AI.",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*",
        "*://gemini.google.com/*",
        "*://www.midjourney.com/*",
        "*://stability.ai/*",
        "*://www.notion.com/*",
        "*://www.anyword.com/*",
        "*://openai.com/*",
        "*://elevenlabs.io/*",
        "*://www.anthropic.com/*",
        "*://labs.openai.com/*",
        "*://www.perplexity.ai/*",
        "*://claude.ai/*",
        "*://chat.deepseek.com/",
        "*://www.ada.cx/",
        "*://grok.com/",
        "*://www.llama.com/",
        "*://mistral.ai/",
        "*://creator.nightcafe.studio/"
      ],
      "js": ["redirect.js"]
    },
    {
      "matches": ["*://search.brave.com/*", "*://www.google.com/search/*"],
      "js": ["preventOverview.js"]
    }
  ]
}
